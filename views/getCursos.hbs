<head>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <header class="infoHeader">
        <h1>Cursos</h1>
        <p>Alguns dos cursos que nossa instituição oferece:</p>
    </header>
    <div class="btnCad">
        <button><a href="/">Rotas</a></button>
        <button><a href="/cadcursos">Cadastro de cursos</a></button>
        <button><a href="/buscar">Buscar</a></button>
    </div>
    <div class="infoCursos">
        {{#each listar}}
        <div>
            <h2>#{{id}} {{nome}}</h2>
            <a class="linkInfos" href="/cursos/{{this.id}}">
                <ul>
                    <li><strong>Módulos:</strong> {{modulos}}</li>
                    <li><strong>Turmas:</strong> {{turmas}}</li>
                    <li><strong>Carga-horária:</strong> {{cargaHoraria}}</li>
                    <li><strong>Descrição:</strong> {{descricao}}</li>
                </ul>
                <button><a href="/cursos/edit/{{this.id}}">Editar</a></button>
                <button><a href="/remove/{{this.id}}">Excluir</a></button>
            </a>
        </div>
        {{/each}}
    </div>
    
</body>